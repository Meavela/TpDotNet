@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-6">
        <h2>Import</h2>
        <hr />
        <form asp-action="Import">
            <input name="path" class="form-control" value=".\Resources\restaurants.net.json"/>
            @if (!string.IsNullOrEmpty(ViewBag.ImportMessageSuccess))
            {
                <span style="color: green">@ViewBag.ImportMessageSuccess</span>
            }else if (!string.IsNullOrEmpty(ViewBag.ImportMessageError))
            {
                <span style="color: red">@ViewBag.ImportMessageError</span>
            }
            <br/>
            <button type="submit" value="Import" class="btn btn-primary">Import</button>
        </form>
    </div>
    <div class="col-md-6">
        <h2>Export</h2>
        <hr />
        <form asp-action="Export">
            <input name="path" class="form-control" value=".\Resources\exportFile.net.json" />
            @if (!string.IsNullOrEmpty(ViewBag.ExportMessageSuccess))
            {
                <span style="color: green">@ViewBag.ExportMessageSuccess</span>
            }
            else if (!string.IsNullOrEmpty(ViewBag.ExportMessageError))
            {
                <span style="color: red">@ViewBag.ExportMessageError</span>
            }
            <br />
            <button type="submit" value="Export" class="btn btn-primary">Export</button>
        </form>
    </div>
</div>